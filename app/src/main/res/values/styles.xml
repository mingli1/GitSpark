<resources>
    
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="AppTheme.RoundedCornerMaterialButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/rounded_button_bg</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="HeaderBold">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>
    
    <style name="HeaderBold.Large" parent="HeaderBold">
        <item name="android:textSize">30sp</item>
    </style>
    
    <style name="HeaderBold.Small" parent="HeaderBold">
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="HeaderSubtext">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    
    <style name="Body">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>
    
    <style name="Body.Small" parent="Body">
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="Body.Small.Bold" parent="Body.Small">
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="BodyLight" parent="Body">
        <item name="android:textColor">@color/colorDarkerGray</item>
    </style>
    
    <style name="BodyLight.Small" parent="BodyLight">
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="BodyLight.ExtraSmall" parent="BodyLight">
        <item name="android:textSize">12sp</item>
    </style>
    
    <style name="BodyLight.Bold" parent="BodyLight">
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="BodyBold" parent="Body">
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="BodyLarge" parent="Body">
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="Footer">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="LabelStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorDarkerGray</item>
    </style>
    
    <style name="TopicsStyle" parent="LabelStyle">
        <item name="android:textColor">@color/colorTopicsText</item>
    </style>

</resources>
