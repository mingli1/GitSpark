<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardElevation="0dp"
    app:cardCornerRadius="4dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/colorWhiteDark">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/avatar_card_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="4dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/colorWhiteDark"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">
        
            <ImageView
                android:id="@+id/avatar_image"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:scaleType="fitCenter"
                tools:src="@drawable/ic_launcher_background"/>
    
        </com.google.android.material.card.MaterialCardView>
    
        <Button
            android:id="@+id/following_button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:padding="12dp"
            android:text="Follow"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Follow"/>
    
        <TextView
            android:id="@+id/name_field"
            style="@style/HeaderBold.Small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:singleLine="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/avatar_card_view"
            app:layout_constraintEnd_toStartOf="@id/following_button"
            tools:text="Ming Li"/>
    
        <TextView
            android:id="@+id/username_field"
            style="@style/BodyLight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:singleLine="true"
            app:layout_constraintTop_toBottomOf="@id/name_field"
            app:layout_constraintStart_toEndOf="@id/avatar_card_view"
            app:layout_constraintEnd_toStartOf="@id/following_button"
            tools:text="mingli1"/>
    
        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/colorLightGray"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/following_button"
            app:layout_constraintStart_toEndOf="@id/avatar_card_view"
            app:layout_constraintEnd_toEndOf="parent"/>
        
        <TextView
            android:id="@+id/bio_field"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/BodyLight"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/avatar_card_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="CS @ Northeastern University. Software Engineer Co-op @Zipcar"/>
    
        <TextView
            android:id="@+id/company_field"
            style="@style/BodyLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_group"
            android:drawablePadding="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="12dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/bio_field"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Zipcar"
            tools:visibility="visible"/>
    
        <TextView
            android:id="@+id/location_field"
            style="@style/BodyLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_location"
            android:drawablePadding="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="12dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/bio_field"
            app:layout_constraintStart_toEndOf="@id/company_field"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Boston, MA"
            tools:visibility="visible"/>
        
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>