<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhiteBackground">
    
    <com.baoyz.widget.PullRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:refreshType="smartisan">
        
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        
                <EditText
                    android:id="@+id/search_field"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textFilter|textNoSuggestions"
                    android:ems="14"
                    android:hint="@string/repo_search_hint"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:padding="11dp"
                    android:background="@drawable/rounded_edittext"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/sort_spinner"/>
                
                <Spinner
                    android:id="@+id/sort_spinner"
                    android:layout_width="108dp"
                    android:layout_height="wrap_content"
                    android:dropDownWidth="96dp"
                    android:layout_marginTop="17dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/spinner_background"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
    
                <TextView
                    android:id="@+id/num_repos_shown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Body"
                    android:visibility="gone"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/search_field"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="Showing 42 repositories"
                    tools:visibility="visible"/>
                
                <TextView
                    android:id="@+id/no_repos_alert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/BodyLight"
                    android:text="@string/no_repos_text"
                    android:visibility="gone"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@id/search_field"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:visibility="visible"/>
        
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/repos_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintTop_toBottomOf="@id/num_repos_shown"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
    
            </androidx.constraintlayout.widget.ConstraintLayout>
            
        </androidx.core.widget.NestedScrollView>
        
    </com.baoyz.widget.PullRefreshLayout>
    
    <include layout="@layout/full_screen_progress_spinner"/>

</FrameLayout>